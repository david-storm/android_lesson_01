<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainText">
        <item name="android:fontFamily">@font/kurale</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
        <item name="lineHeight">1.2sp</item>
    </style>

    <style name="smallText">
        <item name="android:fontFamily">@font/kurale</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="checkBox">
        <item name="android:color">@android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="styleButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/style_button</item>
    </style>

    <style name="SeekBarCustomSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@drawable/ic_vertical_line</item>
    </style>

</resources>